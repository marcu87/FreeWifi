<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

	<PreferenceCategory 
		android:title="Authentification"
		android:key="first_category">
		
		<EditTextPreference
			android:key="auth_username"
			android:title="Username" 
			android:dialogTitle="Username"
			android:dialogMessage="Set your FreeWIFI username"	
			android:defaultValue=""
			android:singleLine="true" />
		
		<EditTextPreference
			android:key="auth_password"
			android:title="Password" 
			android:dialogTitle="Password"
			android:dialogMessage="Set your FreeWIFI password"	
			android:defaultValue=""
			android:singleLine="true" />
			
	</PreferenceCategory>
	
</PreferenceScreen>