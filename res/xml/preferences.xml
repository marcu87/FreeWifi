<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

	<PreferenceCategory 
		android:title="Authentification"
		android:key="first_category">
		
		<EditTextPreference
			android:key="auth_username"
			android:title="Username" 
			android:dialogTitle="Username"
			android:dialogMessage="Set your FreeWIFI username:"	
			android:defaultValue=""
			android:summary="Set your FreeWifi login"
			android:singleLine="true" />
		
		<EditTextPreference
			android:key="auth_password"
			android:title="Password" 
			android:dialogTitle="Password"
			android:dialogMessage="Set your FreeWIFI password:"
			android:summary="Set your FreeWIFI password"	
			android:defaultValue=""
			android:singleLine="true" />
			
	</PreferenceCategory>

	<PreferenceCategory 
		android:title="Connectivity"
		android:key="second_category">	
		
		<CheckBoxPreference
	          android:title="Auto forget network"
	          android:defaultValue="true"
	          android:summary="Forgets the FreeWifi network when connection is lost, it won't try to reconnect automatically"
	          android:key="auto_forget" />

		<CheckBoxPreference
	          android:title="Auto login"
	          android:defaultValue="true"
	          android:summary="Automatic login when FreeWifi is connected"
	          android:key="auto_login" />
		
	</PreferenceCategory>
		
</PreferenceScreen>